<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#B4BBC4</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="NumberPickerTextColorStyle">
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
    </style>
    <style name="deleteButton">
        <item name="android:background">#cc0000</item>
        <item name="android:radius">30dp</item>
        <item name="android:textColor">#88b04b</item>

    </style>
    <style name="updateButton">
        <item name="android:background">#cc0000</item>
        <item name="android:radius">30dp</item>
        <item name="android:textColor">#cc0000</item>

    </style>
    <style name="field">
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>


    </style>

</resources>